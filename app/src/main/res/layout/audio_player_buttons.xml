<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ImageButton
        android:id="@+id/button_skip_backward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/actionBarItemBackground"
        style="?android:attr/actionButtonStyle"
        android:contentDescription="@string/desc_button_skip_backward"
        android:src="@drawable/ic_media_previous" />
    
    <ImageButton
        android:id="@+id/playlist_button_repeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/actionBarItemBackground"
        style="?android:attr/actionButtonStyle"
        android:contentDescription="@string/playlist_repeat"
        android:src="@drawable/ic_mp_repeat_off_btn" />

    <ImageButton
        android:id="@+id/playlist_button_shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/actionBarItemBackground"
        style="?android:attr/actionButtonStyle"
        android:contentDescription="@string/playlist_shuffle"
        android:src="@drawable/ic_mp_shuffle_off_btn" />

    <ImageButton
        android:id="@+id/button_skip_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="?android:attr/actionBarItemBackground"
        style="?android:attr/actionButtonStyle"
        android:contentDescription="@string/desc_button_skip_forward"
        android:src="@drawable/ic_media_next" />

</merge>